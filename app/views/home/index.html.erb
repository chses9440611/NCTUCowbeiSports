<div class="container">
	<table class="table table-hover w-50 mx-auto">
		<thead>
			<tr>
				<th class="text-center"colspan="3">公告列表</th>
			</tr>
		</thead>

		<tbody>
			<% anncs.each do |annc| %>
				<tr>
					<td>
						<%= annc.created_at.strftime("%Y-%m-%D")%>
					</td>
					
					<td>
						<%= annc.title%>
					</td>
					
					<td>	
						<button type="button" class="btn btn-success" data-toggle="modal" data-target="#content_show">
							詳細
						</button>
					</td>
					<%= render "modal", :annc => annc %>
				</tr>
			<% end %>
	</table>
</div>


<div class="container mx-auto float-right">
	<h3 class="text-center col-6"> 編輯活動</h1>

	<%= form_for @event do |f| %>
		<% if @event.errors.any? %>
			<div>
				<ul class="text-danger">
					<% @event.errors.full_messages.each do |message| %>
						<%= message %>
					<% end %>
				</ul>
			</div>
		<% end %>
		<div class="form-group col-6">
			<%= f.label :name, "活動名稱" %>
			<%= f.text_field :name, class: "form-control" %><br>
		</div>

		<div class="form-group col-6">
			<%= f.label :event_date, "活動日期" %>
			<%= f.date_field :event_date, class: "date-picker form-control" %><br>
		</div>


		<div class="form-group col-6">
			<%= f.label :description, "活動簡述" %>
			<%= f.text_area :description, class: "form-control", rows: "10"%><br>
		</div>


		<div class="form-group col-6">
			<%= f.label :max_num_team, "最多幾隊: "%>
			<%= f.number_field :max_num_team, class: "form-control"%><br>
		</div>


		<div class="form-group col-6">
			<%= f.label :min_num_team, "最少幾隊: "%>
			<%= f.number_field :min_num_team, class: "form-control"%><br>
		</div>


		<div class="form-group col-6">
			<%= f.label :max_num_people, "每隊最多幾人: "%>
			<%= f.number_field :max_num_people, class: "form-control"%><br>
		</div>


		<div class="form-group col-6">
			<%= f.label :min_num_people, "每隊最少幾人: "%>
			<%= f.number_field :min_num_people, class: "form-control"%><br>
		</div>


		<div class="form-group col-6">
			<%= f.submit "儲存", class: "btn btn-primary"%>
			<%= link_to "取消", events_path %>
		</div>
	<% end%>

</div>
